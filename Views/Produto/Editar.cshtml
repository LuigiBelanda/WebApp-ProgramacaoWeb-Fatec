@model WebApp.Models.ProdutosModel

<div class="card">
    <div class="card-header">
        <h2>Cadastro de Produto</h2>
    </div>
    <div class="card-body">
        <form action="/Produto/SalvarDados" method="post">
            <label>Id</label>
            <input readonly name="Id" value="@Model.Id" class="form-control" />

            <br />

            <label>Nome</label>
            <input type="text" name="Nome" class="form-control" placeholder="Digite o nome do produto" value="@Model.Nome"/>

            <br />

            <label>Quantidade em Estoque</label>
            <input type="number" name="QtdEstoque" class="form-control" placeholder="Coloque a quantidade do produto" value="@Model.QtdEstoque"/>

            <br />

            <button type="submit" class="btn btn-info"> Salvar </button>
        </form>
    </div>
</div>