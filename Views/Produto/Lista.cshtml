@model List<WebApp.Models.ProdutosModel>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h2>Lista de Produtos</h2>
            </div>
            <div class="card-body">
                <form action="/Produto/Lista" method="get">
                    <div class="row">
                        <div class="col-2">
                            <a href="/Produto/Cadastrar" class="btn btn-success">Novo produto</a>
                        </div>

                        <div class="col-4">
                            <select name="filtro" class="form-control">
                                <option value="0">Todos as opções</option>
                                <option value="id">Por Código</option>
                                <option value="nome">Por Nome</option>
                                <option value="qtd">Por Qtd</option>
                            </select>
                        </div>

                        <div class="col-4">
                            <input type="text" name="busca" class="form-control"/>
                        </div>

                        <div class="col-2">
                            <button class="btn btn-primary">Pesquisar</button>
                        </div>
                    </div
                </form>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Código do Produto</th>
                            <th>Nome</th>
                            <th>Qtd em Estoque</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var produto in Model)
                        {
                            <tr>
                                <td>@produto.Id</td>
                                <td>@produto.Nome</td>
                                <td>@produto.QtdEstoque</td>

                                <td>
                                    <a href="/Produto/Editar/@produto.Id" class="btn btn-warning">Editar</a> 
                                    <a href="/Produto/Excluir/@produto.Id" class="btn btn-danger">Excluir</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>