<div class="card">
    <div class="card-header">
        <h2>Cadastro de Cliente</h2>
    </div>
    <div class="card-body">
        <form action="/Produto/Salvar" method="post">
            <label>Nome</label>
            <input type="text" name="Nome" class="form-control" placeholder="Digite o nome do cliente" />

            <br />

            <label>CPF</label>
            <input type="number" name="QtdEstoque" class="form-control" placeholder="Coloque o CPF do Cliente" />

            <br />

            <button type="submit" class="btn btn-info"> Salvar </button>
        </form>
    </div>
</div>