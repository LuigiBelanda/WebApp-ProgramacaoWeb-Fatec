@model WebApp.Models.ClientesModel

<div class="card">
    <div class="card-header">
        <h2>Cadastro de Cliente</h2>
    </div>
    <div class="card-body">
        <form action="/Cliente/SalvarDados" method="post">
            <label>Id</label>
            <input readonly name="Id" value="@Model.Id" class="form-control" />

            <br />

            <label>Nome</label>
            <input type="text" name="Nome" class="form-control" placeholder="Digite o nome do cliente" value="@Model.Nome"/>

            <br />

            <label>Telefone</label>
            <input type="tel" name="Telefone" class="form-control" placeholder="Coloque o telefone do cliente" value="@Model.Telefone" />

            <br />

            <button type="submit" class="btn btn-info"> Salvar </button>
        </form>
    </div>
</div>